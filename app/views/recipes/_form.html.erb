<%= form_for(@recipe, html: {class: 'well', multipart: true}) do |f| %>

	<% if false %>
		<div class="row">
			<div class="alert alert-danger col-md-8 col-md-offset-2">
				Please correct the following errors:
				<ul>
					<% @recipe.errors.full_messages.each do |error| %>
						<li><%= error %></li>
					<% end %>
				</ul>
			</div>
		</div>
	<% end %>

	<h2 class="text-center"><%= @form_title %></h2>
	<div class="form-group">
		<%= f.label :name, class: 'sr-only' %>
		<%= f.text_field :name, class: 'form-control', placeholder: 'Name' %>
	</div>
	
	<div class="form-group">
		<%= f.label :summary, class: 'sr-only' %>
		<%= f.text_area :summary, class: 'form-control', placeholder: 'Summary' %>
	</div>
	
	<div class="form-group">
		<%= f.label :description, class: 'sr-only' %>
		<%= f.text_area :description, class: 'form-control', placeholder: 'Steps', rows: 10 %>
	</div>
	
	<div class="form-group">
		<%= f.file_field :picture, accept: 'image/jpg,image/jpeg,image/gif,image/png' %>
	</div>
	
	<div class="form-group">
		<%= f.submit(@recipe.new_record? ? 'Create recipe' : 'Edit recipe', class: 'btn btn-success') %>
	</div>

<% end %>

<script type="text/javascript">
	$('#recipe_picture').bind('change', function() {
		size_in_megabytes = this.files[0].size/1024/1024;
		if(size_in_megabytes > 5) {
			alert('Maximum file size is 5MB. Please choose a smaller image.')
		}
	});
</script>